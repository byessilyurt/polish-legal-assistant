# Polish Legal Assistant Backend - Environment Variables Example
# Copy this file to .env and fill in your actual values

# ============================================================================
# OpenAI Configuration
# ============================================================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# OpenAI model for chat responses (gpt-4o recommended)
OPENAI_MODEL=gpt-4o

# OpenAI model for text embeddings
OPENAI_EMBEDDING_MODEL=text-embedding-3-large

# Temperature for responses (0.0 = deterministic, 2.0 = very creative)
# Lower values (0.1-0.3) recommended for legal/factual content
OPENAI_TEMPERATURE=0.3

# Maximum tokens for OpenAI responses
OPENAI_MAX_TOKENS=1500

# ============================================================================
# Pinecone Configuration
# ============================================================================
# Get your API key from: https://app.pinecone.io/
PINECONE_API_KEY=your-pinecone-api-key-here

# Pinecone environment (e.g., us-west1-gcp, us-east1-aws)
PINECONE_ENVIRONMENT=us-west1-gcp

# Name of your Pinecone index
PINECONE_INDEX_NAME=polish-legal-docs

# ============================================================================
# RAG Configuration
# ============================================================================
# Number of documents to retrieve from vector database
RAG_TOP_K=5

# Minimum similarity score threshold (0.0-1.0)
# Documents below this score will be filtered out
RAG_SIMILARITY_THRESHOLD=0.7

# Maximum context length in tokens
RAG_MAX_CONTEXT_LENGTH=6000

# ============================================================================
# Application Configuration
# ============================================================================
# Application name
APP_NAME=Polish Legal Assistant API

# API version
APP_VERSION=1.0.0

# Debug mode (set to True for development, False for production)
DEBUG=False

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# API prefix for versioning
API_PREFIX=/api/v1

# ============================================================================
# CORS Configuration
# ============================================================================
# Allowed origins for CORS (comma-separated list)
# Add your frontend URLs here
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","http://localhost:8080"]

# ============================================================================
# Notes
# ============================================================================
# 1. Never commit the .env file with real API keys to version control
# 2. Keep your API keys secure and rotate them regularly
# 3. For production, use environment variables or secret management services
# 4. Adjust RAG parameters based on your knowledge base size and quality
